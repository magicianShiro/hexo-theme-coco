#header-outer
  height: header-height
  position: relative
  // z-index: 10
  box-shadow: 0px 1px 2px rgba(0, 0, 0, .05)
  #header-inner
    height: 100%
    width: header-inner-width
    padding: 0 20px
    margin: 0 auto
    // .banner
      // position: absolute
      // top: 0
      // width: 100%
      // height: 100%
      // background-color: header-bgColor
      // z-index: 1
    #logo,
    #main-nav
      height: 100%
      padding: header-padding
      height: (header-height - header-padding-col * 2)
      line-height: @height
    #logo
      .logo
        display: inline-block
        margin-right 5px
        width: (header-height - header-padding-col * 2)
        height: @width
        background-color: #f60
      .site-title
        color: color-nav
        display: inline-block
        vertical-align: top
        font-size: 16px
        font-weight: 600

    #main-nav
      .main-nav-link
        color: color-nav
        padding: header-padding-row    
        &:hover
          color: color-nav-active

        
